<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hardware"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            />

        <com.sampleapplication.deviceinformation.ListItemsView
            android:id="@+id/device_name_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"/>

        <com.sampleapplication.deviceinformation.ListItemsView
            android:id="@+id/android_version_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

        <com.sampleapplication.deviceinformation.ListItemsView
            android:id="@+id/manufacturer_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <com.sampleapplication.deviceinformation.ListItemsView
            android:id="@+id/model_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <com.sampleapplication.deviceinformation.ListItemsView
            android:id="@+id/build_version_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <com.sampleapplication.deviceinformation.ListItemsView
            android:id="@+id/board_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <com.sampleapplication.deviceinformation.ListItemsView
            android:id="@+id/product_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/black"
            android:layout_marginTop="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bluetooth Low Energy"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:layout_marginTop="10dp"
            />

            <com.sampleapplication.deviceinformation.ListItemsView
                android:id="@+id/ble_supported_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

            <com.sampleapplication.deviceinformation.ListItemsView
                android:id="@+id/native_hd_supported_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

            <com.sampleapplication.deviceinformation.ListItemsView
                android:id="@+id/lollipop_scanner_supported_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

            <com.sampleapplication.deviceinformation.ListItemsView
                android:id="@+id/offloaded_filtering_supported_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

            <com.sampleapplication.deviceinformation.ListItemsView
                android:id="@+id/offloaded_scan_batching_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

            <com.sampleapplication.deviceinformation.ListItemsView
                android:id="@+id/peripheral_mode_supported_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

            <com.sampleapplication.deviceinformation.ListItemsView
                android:id="@+id/multiple_advertisement_supported_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/black"
                android:layout_marginTop="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Screen"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                android:layout_marginTop="10dp"
                />

            <com.sampleapplication.deviceinformation.ListItemsView
                android:id="@+id/resolution_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

            <com.sampleapplication.deviceinformation.ListItemsView
                android:id="@+id/dimen_in_pixel_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

            <com.sampleapplication.deviceinformation.ListItemsView
                android:id="@+id/dimen_in_dip_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

            <com.sampleapplication.deviceinformation.ListItemsView
                android:id="@+id/size_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

            <com.sampleapplication.deviceinformation.ListItemsView
                android:id="@+id/aspect_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/black"
                android:layout_marginTop="10dp"/>

        </LinearLayout>

</ScrollView>

